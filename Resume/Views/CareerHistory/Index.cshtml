
@model IEnumerable<Resume.ViewModels.CareerHistoryViewModel>
@section jsVars{
    <script>
        const controller = "CareerHistory";
    </script>
}
<div class="careerHistoryList">
    <table id="tableRow" class="table table-striped table-dark table-bordered table-hover table-responsive-sm">
        <tbody>
            <tr>
                <td style="padding: 20px;">
                    <table>
                        <tr>
                            <td style="width: 20vw;">
                                <div class="table-column-header">
                                    <span>@Html.DisplayNameFor(m => m.WorkTitle)</span>
                                </div>
                            </td>
                            <td style="width: 30vw;">
                                <div class="table-column-header">
                                    <span>@Html.DisplayNameFor(m => m.RoleHeader)</span>
                                </div>
                            </td>
                            <td style="width: 50vw;">
                                <div class="table-column-header">
                                    <span>@Html.DisplayNameFor(m => m.WorkDescription)</span>
                                </div>
                            </td>
                        </tr>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.WorkTitle</td>
                            <td>
                                <div>
                                    <span class="paragraph-title" style="padding: 5px;">zoom</span>
                                    @item.RoleHeader
                                </div>
                            </td>
                            <td>@item.WorkDescription</td>
                        </tr>
                        }
                    </table>
                </td>
            </tr>
        </tbody>
    </table>
</div>

