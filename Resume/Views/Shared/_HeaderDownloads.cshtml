@model IEnumerable<Resume.ViewModel.SubmoduleViewModel>


@section jsVars{
    <script>
        const controller = "Downloads";
    </script>
}
@{
    string SubmoduleId = ViewContext.RouteData.Values["id"].ToString();
}
<div class="downloadList">
    <table id="tableRow" class="table table-striped table-dark table-bordered table-hover table-responsive-sm" style="width: 100%;">
        <thead>
            <tr>
                <th style="padding: 20px;">
                    <table>
                        <thead>
                            <tr>
                                <th style="width: 25vw;">
                                    <div class="table-column-header">
                                        <span>Download Description</span>
                                    </div>
                                </th>
                                <th style="width: 30vw">
                                    <div class="table-column-header">
                                        <span>Download Source Type</span>
                                    </div>
                                </th>
                                <th style="width: 45vw;">
                                    <div class="table-column-header">
                                        <span>Download Link</span>
                                    </div>
                                </th>
                            </tr>
                        </thead>
                    </table>
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td style="padding-left: 20px;">
                    <table>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td style="width: 25vw;">@item.DownloadDescription</td>
                                <td style="width: 30vw;">@item.UrlSourceType</td>
                                <td style="width: 40vw;">
                                    @switch (item.UrlSourceTypeId)
                                    {
                                        case 2:
                                            string temp = @item.DownloadUrl.Split('/')[2];
                                            temp = temp.Replace("_", " ");
                                            <a href="@item.DownloadUrl">@temp</a>;
                                            break;
                                        case 1:
                                        default:
                                            <a href="@item.DownloadUrl">@item.DownloadUrl</a>
                                            break;
                                    }
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </td>
            </tr>
        </tbody>
    </table>
</div>

